---
export interface Props {
    title: string;
    description: string;
    image: string;
    href: string;
}

const { title, description, image, href } = Astro.props;
---

<a
        href={href}
        class="blockÃ¥ bg-white dark:bg-gray-800 shadow-lg rounded-lg overflow-hidden transition-transform transform hover:scale-105 no-underline"
>
    <div class="p-4">
        <!-- Responsive flex layout -->
        <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4">
            <img
                    src={image}
                    alt={title}
                    class="w-full sm:w-32 sm:h-32 h-auto object-cover rounded-md"
            />
            <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 hover:underline sm:mt-0 mt-2">
                {title}
            </h3>
        </div>


        <!-- Description below -->
        <p class="text-gray-600 dark:text-gray-100 mt-3">
            {description}
        </p>
    </div>
</a>